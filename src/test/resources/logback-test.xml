<configuration>
    <!-- Suppress verbose Apache HTTP client logging -->
    <logger name="org.apache.hc.client5.http.wire" level="OFF"/>

    <!-- Optional: lower other noisy logs -->
    <logger name="org.apache.hc.client5.http.impl.classic" level="WARN"/>
    <logger name="org.apache.hc.core5.http.impl.io" level="WARN"/>
    <logger name="net.serenitybdd" level="INFO"/>

    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
